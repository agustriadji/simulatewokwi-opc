#include <ESP8266WiFi.h>
#include <ESP8266HTTPClient.h>

const char *ssid = "OpenStream";
const char *password = "L33Y4141128";
const char *server = "http://192.168.100.23:5000/sensor"; // IP PC kamu

void setup()
{
  Serial.begin(115200);
  Serial.println("Starting simulation...");
  Serial.println("Connecting to WiFi...");

  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED)
  {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nConnected to WiFi");
}

void loop()
{
  float temperature = random(250, 350) / 10.0;

  if (WiFi.status() == WL_CONNECTED)
  {
    WiFiClient client;
    HTTPClient http;

    String payload = "{\"temperature\":" + String(temperature, 1) + "}";
    Serial.println("Sending payload: " + payload);

    http.begin(client, server);
    http.addHeader("Content-Type", "application/json");
    http.setTimeout(3000); // 3 detik

    int httpCode = http.POST(payload);
    Serial.println("HTTP Response code: " + String(httpCode));

    http.end();
  }
  else
  {
    Serial.println("WiFi not connected");
  }

  delay(2000);
}